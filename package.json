{
  "name": "guidr",
  "private": true,
  "version": "0.0.1",
  "description": "Mobile first web app that creates self-guided audio tours around the users location",
  "author": "Team Balenciaga",
  "license": "BSD-2-Clause",
  "scripts": {
    "clean": "rimraf build/",
    "build": "npm run build:server && npm run build:app",
    "build:server": "echo 'No server script specified'",
    "build:app": "npm run build:css && npm run build:js",
    "build:css": "node-sass --source-map=true app/styles.scss bundle.css",
    "build:js": "webpack",
    "watch:app": "parallelshell 'npm run watch:js -s' 'npm run watch:css -s'",
    "watch:js": "nodemon -q -w app/ --ext 'js,html' --exec 'npm run build:js'",
    "watch:css": "nodemon -q -w app/ --ext 'scss' --exec 'npm run build:css'",
    "serve": "http-server -p 9090 -c-1 build/app",
    "live-reload": "live-reload --port 9091 build/app",
    "app-dev": "parallelshell 'npm run live-reload -s' 'npm run serve -s' 'npm run watch:app -s'",
    "deploy": "git pull origin master && npm install && npm run build && npm install",
    "prod-install": "cp -r build/* /var/www/htdocs",
    "start-deploy-hook": "forever start --uid deploy-hook --killSignal=SIGTERM -c nodemon --exitcrash deploy-hook-server.js",
    "stop-deploy-hook": "forever stop deploy-hook"
  },
  "dependencies": {
    "react": "~0.13.3"
  },
  "devDependencies": {
    "webpack": "~1.12.0",
    "babel-core": "~5.8.22",
    "babel-loader": "~5.3.2",
    "eslint": "~1.3.1",
    "babel-eslint": "~4.1.1"
  }
}
